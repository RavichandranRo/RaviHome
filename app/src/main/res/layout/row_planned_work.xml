<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox android:id="@+id/cbComplete" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:id="@+id/tvTitle" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:id="@+id/tvDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView android:id="@+id/tvDate" android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>